#!/bin/tcsh -f
awk '{nL=NR;nC=NF;for(j=1;j<=nC;j++)t[j,NR]=$j} END{for(j=1;j<=nC;j++) {a=t[j,1];count[j]=0;sum_col[j]=0;max_col[j]=a;min_col[j]=a} for(j=1;j<=nC;j++) for(i=1;i<=nL;i++) { a=t[j,i]; if(a!=0) {count[j]++; sum_col[j]+=a;if( a>max_col[j]) max_col[j]=a; else if( a<min_col[j] ) min_col[j]=a; } } for(j=1;j<=nC;j++) printf("%g ", min_col[j] ); printf("\n"); for(j=1;j<=nC;j++) printf("%g ", max_col[j] ); printf("\n"); for(j=1;j<=nC;j++) if(count[j]!=0) printf("%g ", sum_col[j]/count[j] ); else  printf("0 "); printf("\n"); for(j=1;j<=nC;j++) printf("%d ", count[j] ); printf("\n"); for(j=1;j<=nC;j++) printf("%g ", sum_col[j] ); printf("\n");}' $1
